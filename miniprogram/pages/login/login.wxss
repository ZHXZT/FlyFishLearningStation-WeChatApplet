page{
  background-image: linear-gradient(to right,#fba017b6,#fba017b6);
}
.container{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.title{
  letter-spacing: 10rpx;
  height: 200rpx;
  line-height: 200rpx;
  color: white;
  font-size: 50rpx;
  text-align: center;
}
.login{
  border-radius: 20rpx;
  width: 500rpx;
  height: 700rpx;
  background-color: white ;
}
.login_top{
  width: 500rpx;
  height: 350rpx;
  background: #ff8e43f8;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  align-items: center;
}
.avatar_button{
  width: 500rpx;
}
.avatar_button .info{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-top: 20rpx;
  color: white;
  font-size: 28rpx;
}
.login_top button{
  width: 200rpx;
  height: 200rpx;
  /* margin: 0 auto; */
  padding: 0;
  border-radius: 100rpx;
}
.login_top image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}
.login_bottom input{
  width: 460rpx;
  height: 80rpx;
  margin-top: 50rpx;
  /* margin-left: 10rpx; */
  border-radius: 10rpx;
  padding: 0 20rpx;
  text-align: center;
  /* border: 2rpx solid silver; */
  outline: none;
  font-size: 35rpx;
  color: rgb(107, 107, 107);
}
.login_bottom button{
  width: 300rpx;
  height: 80rpx;
  color: white;
  background: #ff8e43f8;
  margin-top: 50rpx;
  border-radius: 10rpx;
  border: none;
}