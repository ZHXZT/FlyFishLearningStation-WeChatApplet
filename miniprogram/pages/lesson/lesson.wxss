
/* 搜索 */
.search{
  margin: 20rpx 20rpx 0 20rpx;
  height:60rpx;
  line-height: 60rpx;
  color: rgb(192, 192, 192);
  background-color:rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}
.searchIcon {
  font-size: 45rpx;
  position: absolute;
  left: 40rpx;
}
.search .placeholder{
  font-size: 30rpx;
  color: rgb(192, 192, 192);
}
.search input{
  margin-left: 75rpx;
  height: 60rpx;
}

/* 导航 */
.navScroll{
  /* margin-top: 30rpx; */
  padding-top: 30rpx;
  display: flex;
  white-space: nowrap;
  height: 70rpx;
  line-height: 70rpx;
  /* background-color: thistle; */
}
.navScroll .navContent{
  margin: 0 30rpx;
  /* padding: 0 20rpx;  */
  font-size: 28rpx;
  height: 60rpx;
}
.active{
  border-bottom: 5rpx solid #ff8e43f8;
  /* font-size: 30rpx; */
  font-weight: bold;
  color:#ff8e43f8 ;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;   }


/* 视频列表 */
.lessonList{
  margin: 0 20rpx;
}
.dyItem{
  display: flex;
  padding: 20rpx 0 ;
  border-bottom:1rpx solid rgba(0, 0, 0, 0.070); 
  justify-content: space-between;
}
.dyItem .pic{
  width: 230rpx;
  height: 150rpx;
}
.dyItem .pic image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.dyItem .txt{
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.dyItem .title{
  font-size: 33rpx;
}
.dyItem .info{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  font-size: 20rpx;
  color: #888;
}
.dyItem .info .info1{
  background-color: rgba(255, 186, 59, 0.199);
  color: rgb(248, 142, 3);
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  margin-right: 10rpx;
  padding: 1rpx 10rpx;
}
.dyItem .info .info2{
  margin-left: auto;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
}



.done{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.534);
}