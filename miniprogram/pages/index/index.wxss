

/* 轮播 */
.banner{
  margin: 20rpx 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  height: 370rpx;
}
.banner swiper{
  height: 100%;
  width:100%;
}
.banner image{
  height: 100%;
  width: 100%;
}

/* 导航 */
.major{
  white-space: nowrap;
}
.major .pic{
  width: 100rpx;
  height: 100rpx;
}
.major .box{
  width: 20%;
  height: 150rpx;
  display: inline-block; 
  text-align: center;
  margin: 20rpx 0;
}
.major .txt{
  font-size: 26rpx;
  text-align: center;
  margin-top: 10rpx;
}



/* 热门题 */
.pubTitle{
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  align-items: center;
  /* margin-bottom: 40rpx; */
}
.pubTitle .txt{
  font-size: 33rpx;
  height: 65rpx;
  line-height: 65rpx;
  position: relative;
  margin-left: 15rpx;
}
.pubTitle .txt::before{
  content: "";
  background-color: #ff9839;
  display: block;
  width: 7rpx;
  height: 30rpx;
  position: absolute;
  margin-top: 20rpx;
  margin-left: -15rpx;
  /* top:50%; */
}
.pubTitle .more{
  color: rgba(0, 0, 0, 0.404);
  font-size: 28rpx;
  height: 65rpx;
  line-height: 65rpx;

}

.works{
  padding: 10rpx 20rpx 30rpx 20rpx;
  /* padding: 90rpx 0 70rpx; */
  background-color:rgba(0, 0, 0, 0.070);
}

.wkMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.wkMain .box{
  width: 351rpx;
  height: 212rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.wkMain .pic{
  width: 100%;
  height: 100%;
}
.wkMain .ceng{
  background-color:rgba(0,0,0,0.35);
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  flex-direction: column;
  box-sizing: border-box;
} 
.wkMain .line{
  width: 40rpx;
  height: 5rpx;
  background-color: white;
  margin: 10rpx 0 20rpx;
}
.wkMain .des{
  opacity: 0.65;
  font-size: 22rpx;
  text-transform: uppercase;
  text-align: center;
}

/* 精品课程 */

.dynamic{
  /* padding: 90rpx,0,70rpx; */
  margin: 0rpx 20rpx;
}
.itemList{
  margin-top: -20rpx;
}
.dyItem{
  display: flex;
  padding: 20rpx 0 ;
  border-bottom:1rpx solid rgba(0, 0, 0, 0.070); 
  justify-content: space-between;
}
.dyItem .pic{
  width: 230rpx;
  height: 150rpx;
}
.dyItem .pic image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.dyItem .txt{
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.dyItem .title{
  font-size: 33rpx;
}
.dyItem .info{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  font-size: 20rpx;
  color: #888;
}
.dyItem .info .info1{
  background-color: rgba(255, 186, 59, 0.199);
  color: rgb(248, 142, 3);
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  margin-right: 10rpx;
  padding: 1rpx 10rpx;
}
.dyItem .info .info2{
  margin-left: auto;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
}





.done{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.534);
}

