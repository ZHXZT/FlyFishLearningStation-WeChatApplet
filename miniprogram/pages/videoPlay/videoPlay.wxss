/* 课程评价 */
.evaluateTitle{
  /* margin: 20rpx 0; */
  font-size: 28rpx;
  display: flex;
  height: 120rpx;
  line-height: 50rpx;
  align-items: center;
  text-align: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.070);
}
.allEvaluate{
  height: 120rpx;
  line-height: 110rpx;
}
.sendEvaluate{
  margin-left: auto;
  border-radius: 10rpx;
  padding:0 10rpx;
  border: 1rpx solid rgb(250, 144, 6);
  color: rgb(250, 144, 6);
}
.evaluate_input{
  background-color:rgba(0, 0, 0, 0.070);
  border-radius: 20rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.evaluateItem{
  /* background-color: cadetblue; */
  height: 180rpx;
  line-height: 180rpx;
  align-items: center;
  display: flex;
  border-bottom: 1rpx dashed rgba(0, 0, 0, 0.070);
}

.evaluateImage{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}
.evaluateImage image{
  width: 100%;
  height: 100%;
}
.evaluateInfo{
  display: flex;
  flex-direction: column;
  height: 130rpx;
  line-height: 130rpx;
  margin-left: 30rpx;

}
.evaluateName{
  color: rgba(250, 144, 6, 0.726);
  font-size:25rpx ;
  height: 40rpx;
  line-height: 40rpx;
}
.evaluateContent{
  font-size:28rpx ;
  height: 60rpx;
  line-height: 60rpx;
}
.evaluateTime{
  font-size:25rpx ;
  height: 30rpx;
  line-height: 30rpx;
  color: rgba(0, 0, 0, 0.658);
}